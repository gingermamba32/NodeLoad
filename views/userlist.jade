extends layout

block content
	body
		.proposals
			ul
				each post, i in postlist
					li.post-list-design.br 
						h4 #{post.date}
						h4 #{post.postname}
						h4 #{post.postemail}
						button.btn.btn-list
							a.list(href="/singleview/#{post.id}") View
						button.btn.btn-list
							a.list(href="/deleteuser/#{post.id}", onclick="return warningList();") Delete
						button.btn.btn-list
							a.list(href="/edituser/#{post.id}") EDIT 
			
		script.
				function warningList() {
				  if(confirm("Please confirm you want to delete this proposal") == true){
				  return true;
				  } 
				else{
				return false;
					}
				}

				
					

    
