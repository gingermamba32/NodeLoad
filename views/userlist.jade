extends layout

block content
	body
		.proposals
			ul
				each post, i in postlist
					li.post-list-design.br 
						p #{post.date}
						p #{post.postname}
						p #{post.postemail}
						a(href="/singleview/#{post.id}") View
						a(href="/deleteuser/#{post.id}", onclick="return warningList();") Delete
						a(href="/edituser/#{post.id}") EDIT 
			
		script.
				function warningList() {
				  if(confirm("Please confirm you want to delete this proposal") == true){
				  return true;
				  } 
				else{
				return false;
					}
				}
					

    
